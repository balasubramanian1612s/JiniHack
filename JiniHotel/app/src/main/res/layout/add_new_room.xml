<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".addNewRoom">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roomName"
        android:hint="Room Name. Premium, Normal, etc"
        android:layout_margin="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tarrif"
        android:layout_below="@id/roomName"
        android:hint="Room Name. Premium, Normal, etc"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amenityTv"
        android:layout_below="@id/tarrif"
        android:textSize="20dp"
        android:text="amenities"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amenityTv"
        android:id="@+id/bedType"
        android:hint="Room Name. Premium, Normal, etc"
        android:layout_margin="10dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/SpinWifi"
        android:layout_below="@id/bedType"
        android:hint="Room Name. Premium, Normal, etc"
        android:layout_margin="10dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/SpinWifi"
        android:id="@+id/SpinLaundry"
        android:hint="Room Name. Premium, Normal, etc"
        android:layout_margin="10dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/SpinLaundry"
        android:id="@+id/SpinPool"
        android:hint="Room Name. Premium, Normal, etc"
        android:layout_margin="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roomSize"
        android:layout_below="@id/SpinPool"
        android:hint="Room Name. Premium, Normal, etc"
        android:layout_margin="10dp"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/addImage"
    android:layout_below="@id/roomSize"
    android:text="addImages"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add360image"
        android:layout_below="@id/addImage"
        android:text="add 360"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/add360image"
        android:orientation="vertical"
        android:id="@+id/cbLinearLayout"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="complementry"
        android:textSize="20dp"
        android:id="@+id/complementryTv"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/dinnerCB"
        android:layout_height="wrap_content"
        android:text="Dinner"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breakfastCB"
        android:text="Breakfast"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/lunchCB"
        android:layout_height="wrap_content"
        android:text="Lunch"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/brunchCB"
        android:layout_height="wrap_content"
        android:text="Brunch"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/eveningSnackCB"
        android:layout_height="wrap_content"
        android:text="Evening Snacks"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finish up"
        android:layout_below="@+id/cbLinearLayout"
        android:id="@+id/addRoomdata"/>







</RelativeLayout>
</ScrollView>