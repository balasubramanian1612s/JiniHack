<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotel_Info"
    android:orientation="vertical">


    <EditText
        android:id="@+id/hotelNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hotel Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/hotelAddressEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hotel Address"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:text="Checkout Mode"

            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/checkoutRadioGrp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:weightSum="100">

            <RadioButton
                android:id="@+id/checkout24hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Hour"
                android:layout_weight="50"/>

            <RadioButton
                android:id="@+id/checkout12hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Hour"
                android:layout_weight="50"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/poolTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Pool Facilities"
            android:gravity="center"
            android:textSize="20sp"
            />

        <RadioGroup
            android:id="@+id/poolRadioGrp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:weightSum="100">

            <RadioButton
                android:id="@+id/noPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:layout_weight="50"/>

            <RadioButton
                android:id="@+id/isPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False"
                android:layout_weight="50"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/parkingTw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:text="Parking facility"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/parkingRadioGrp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:weightSum="100">

            <RadioButton
                android:id="@+id/valetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valet"
                android:textAlignment="center"
                android:layout_weight="33"/>

            <RadioButton
                android:id="@+id/selfBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self "
                android:layout_weight="33"/>
            <RadioButton
                android:id="@+id/noBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:layout_weight="33"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center"
            android:text="Rating"
            android:textSize="24sp"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"/>



    </LinearLayout>

    <Button
        android:id="@+id/nxtBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next " />

</LinearLayout>