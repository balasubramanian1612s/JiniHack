<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HotelMenu">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/orange"
        android:text="Please select a day"
        android:textSize="30sp"
        android:fontFamily="@font/berlinregular"/>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"/>




    <Button
        android:id="@+id/editMenuButn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="EDIT MENU"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/berlinregular"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/spinner"
        android:background="@drawable/button_orange_bg" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMenuButn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/specialsMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="specials menu"
            android:paddingRight="15dp"
            android:layout_marginLeft="40dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"
            android:fontFamily="@font/berlinregular"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/button_orange_bg"
            />

        <Button
            android:id="@+id/dailyMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="daily menu"
            android:visibility="invisible"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/berlinregular"
            android:textSize="15dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>